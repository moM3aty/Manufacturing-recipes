@using Kitchen.ViewModel
@model AdminDashboardViewModel

<!-- Hero Section with Parallax and Animation -->
<style>

    .btn-accent {
        background-color: var(--accent);
        color: white;
        border: none;
    }

        .btn-accent:hover {
            background-color: var(--primary);
            color: white;
        }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        background: linear-gradient( 135deg, var(--primary) 0%, var(--primary-dark) 100% );
        color: white;
        border-radius: 10px 10px 0 0 !important;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .category-badge {
        background-color: var(--accent-light);
        color: var(--primary-dark);
        font-weight: 600;
    }

    footer {
        background: linear-gradient( 135deg, var(--primary-dark) 0%, var(--primary) 100% );
        color: white;
    }

    .input-group > :not(:first-child):not(.dropdown-menu):not(.valid-tooltip):not( .valid-feedback ):not(.invalid-tooltip):not(.invalid-feedback) {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        border-top-left-radius: 0.375rem;
        border-bottom-left-radius: 0.375rem;
    }

    .input-group > .form-control:not(:first-child) {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
        border-top-right-radius: 0.375rem;
        border-bottom-right-radius: 0.375rem;
    }

    .recipe-code {
        background-color: rgba(255, 255, 255, 0.2);
        padding: 3px 8px;
        border-radius: 4px;
        font-family: monospace;
        font-size: 0.9rem;
    }

    .card-footer-buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
    }

    .more-recipes {
        display: none;
    }

    .chemical-icon {
        background-color: rgba(255, 193, 180, 0.2);
        border-radius: 50%;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
    }

    .hero-img {
        width: 100%;
        height: auto;
        max-height: 400px;
        object-fit: cover;
        border-radius: 10px;
        margin-top: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .logo-subtitle {
        font-weight: 500;
        letter-spacing: -0.5px;
        margin-top: -5px;
    }

    /* Add hover animations */
    .card {
        transition: all 0.3s ease-in-out;
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .card img {
            transition: transform 0.5s ease;
        }

        .card:hover img {
            transform: scale(1.05);
        }

    .btn {
        transition: all 0.3s ease;
        margin: 5px 0;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    /* Hero buttons responsive styles */
    .hero-buttons {
        margin-top: 20px;
    }

        .hero-buttons .btn {
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .hero-buttons .btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }


    .chemical-icon:hover {
        transform: rotate(360deg);
        background-color: rgba(255, 193, 180, 0.4);
    }


    .fade-in-up {
        animation: fadeInUp 0.6s ease-out;
    }

    /* Add pulse effect to badges */


    .category-badge {
        animation: pulse 2s infinite;
    }

    .offer-full-description.line-clamp {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .offer-full-description.expanded {
        -webkit-line-clamp: unset;
        overflow: visible;
    }
</style>


<section id="hero-section"
         class="hero text-white text-center py-5 "
         data-aos="zoom-in"
         data-aos-duration="1500">
    <div class="container position-relative">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <h1 class="display-3 fw-bold animated-text">
                    @ViewData["HeroTitle"]
                </h1>
                <p class="lead mb-4 animated-text">
                    @ViewData["HeroDesc"]
                </p>
                <a href="#recipes" class="btn btn-lg">
                    @ViewData["HeroButton"]
                </a>
            </div>
        </div>
    </div>
</section>
<section class="kitchen-food-section py-5">
    <div class="container">
        <h2 class="section-title mb-5 text-center">
            @(ViewData["Direction"].ToString() == "rtl" ? "روابط مهمة" : "Important Links")
        </h2>

        <div class="row g-4">
            <!-- Card 1: Agriculture -->
            <div class="col-md-4 px-3" data-aos="fade-up" data-aos-delay="100">
                <div class="kitchen-item card h-100 hover-card">
                    <img src="~/assets/green.jpg" alt="Agriculture" class="card-img-top" />
                    <div class="card-body d-flex flex-column">
                        <h3 class="item-title text-center">
                            @(ViewData["Direction"].ToString() == "rtl" ? "الزراعية" : "Agriculture")
                        </h3>
                        <p class="item-description">
                            @(ViewData["Direction"].ToString() == "rtl"
                                                        ? "استكشف منتجات وخدمات زراعية عالية الجودة لدعم الزراعة المستدامة."
