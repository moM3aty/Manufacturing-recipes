@model Kitchen.Models.SectionContent

@{
    ViewData["Title"] = "تعديل محتوى القسم";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="form-container">
    <h2><i class="fas fa-file-alt"></i> @ViewData["Title"]</h2>
    <form asp-action="EditSection" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Key" />

        <div class="form-group">
            <label asp-for="TextAr" class="form-label">النص العربي</label>
            <textarea asp-for="TextAr" class="form-control" rows="5"></textarea>
            <span asp-validation-for="TextAr" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TextEn" class="form-label">النص الإنجليزي</label>
            <textarea asp-for="TextEn" class="form-control" rows="5"></textarea>
            <span asp-validation-for="TextEn" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Dashboard" class="btn btn-secondary"><i class="fas fa-times"></i> إلغاء</a>
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> حفظ التعديلات</button>
        </div>
    </form>
</div>
