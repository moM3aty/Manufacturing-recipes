@model ContactInfo

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = ViewContext.ViewData["Title"] ?? "إضافة جهة اتصال";
}

<form asp-action="@(ViewContext.ViewData["Title"] == "Edit" ? "Edit" : "Create")" dir="rtl">
    <div class="form-group">
        <label asp-for="Type" class="control-label">نوع جهة الاتصال</label>
        <select asp-for="Type" class="form-control">
            <option value="Email">البريد الإلكتروني</option>
            <option value="Phone">الهاتف / واتساب</option>
            <option value="Vodafone">فودافون كاش</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Value" class="control-label">القيمة</label>
        <input asp-for="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">حفظ</button>
</form>
