@using Kitchen.ViewModel
@model AdminDashboardViewModel

@{
    var direction = ViewData["Direction"]?.ToString() ?? "rtl";
    var language = ViewData["Language"]?.ToString() ?? "ar";
}

<style>

    .btn-accent {
        background-color: var(--accent);
        color: white;
        border: none;
    }

        .btn-accent:hover {
            background-color: var(--primary);
            color: white;
        }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        background: linear-gradient( 135deg, var(--primary) 0%, var(--primary-dark) 100% );
        color: white;
        border-radius: 10px 10px 0 0 !important;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .category-badge {
        background-color: var(--accent-light);
        color: var(--primary-dark);
        font-weight: 600;
    }

    footer {
        background: linear-gradient( 135deg, var(--primary-dark) 0%, var(--primary) 100% );
        color: white;
    }

    .input-group > :not(:first-child):not(.dropdown-menu):not(.valid-tooltip):not( .valid-feedback ):not(.invalid-tooltip):not(.invalid-feedback) {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        border-top-left-radius: 0.375rem;
        border-bottom-left-radius: 0.375rem;
    }

    .input-group > .form-control:not(:first-child) {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
        border-top-right-radius: 0.375rem;
        border-bottom-right-radius: 0.375rem;
    }

    .recipe-code {
        background-color: rgba(255, 255, 255, 0.2);
        padding: 3px 8px;
        border-radius: 4px;
        font-family: monospace;
        font-size: 0.9rem;
    }

    .card-footer-buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
    }

    .more-recipes {
        display: none;
    }

    .chemical-icon {
        background-color: rgba(255, 193, 180, 0.2);
        border-radius: 50%;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
    }

    .hero-img {
        width: 100%;
        height: auto;
        max-height: 400px;
        object-fit: cover;
        border-radius: 10px;
        margin-top: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .logo-subtitle {
        font-weight: 500;
        letter-spacing: -0.5px;
        margin-top: -5px;
    }

    /* Add hover animations */
    .card {
        transition: all 0.3s ease-in-out;
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .card img {
            transition: transform 0.5s ease;
        }

        .card:hover img {
            transform: scale(1.05);
        }

    .btn {
        transition: all 0.3s ease;
        margin: 5px 0;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    /* Hero buttons responsive styles */
    .hero-buttons {
        margin-top: 20px;
    }

        .hero-buttons .btn {
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .hero-buttons .btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }


    .chemical-icon:hover {
        transform: rotate(360deg);
        background-color: rgba(255, 193, 180, 0.4);
    }


    .fade-in-up {
        animation: fadeInUp 0.6s ease-out;
    }

    /* Add pulse effect to badges */


    .category-badge {
        animation: pulse 2s infinite;
    }

    .offer-full-description.line-clamp {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .offer-full-description.expanded {
        -webkit-line-clamp: unset;
        overflow: visible;
    }

    #recipes {
        background-color: #f8f9fa; /* Light gray background for contrast */
    }

        #recipes .section-title-container {
            margin-bottom: 4rem;
        }

        #recipes .section-title {
            font-weight: 800;
            color: var(--primary-dark);
        }

        /* Overriding general card styles only within the #recipes section */
        #recipes .card {
            border: none;
            border-radius: 16px;
            background: #ffffff;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05);
            transition: all 0.4s ease;
            overflow: hidden;
        }

            #recipes .card:hover {
                transform: translateY(-12px);
                box-shadow: 0 16px 32px rgba(0, 0, 0, 0.1);
            }

        #recipes .card-img-container {
            position: relative;
            overflow: hidden;
        }

        #recipes .card-img-top {
            height: 240px;
            object-fit: cover;
            transition: transform 0.5s ease;
            border-radius: 0; /* Remove radius from image as container handles it */
        }

        #recipes .card:hover .card-img-top {
            transform: scale(1.1);
        }

        #recipes .offer-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: var(--accent);
            color: white;
            padding: 6px 12px;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 700;
            z-index: 2;
            animation: bounce-in 0.6s ease;
        }

        #recipes .card-body {
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        #recipes .card-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary-dark);
            margin-bottom: 0.5rem;
        }

        #recipes .offer-full-description {
            color: #6c757d;
            font-size: 0.95rem;
            margin-bottom: 1rem;
        }

        #recipes .toggle-description-btn {
            color: var(--primary);
            font-weight: 600;
            text-decoration: none !important;
            background: none;
            border: none;
            padding: 0;
            margin: 0;
        }

            #recipes .toggle-description-btn:hover {
                text-decoration: underline !important;
                box-shadow: none;
                transform: none;
            }

        #recipes .btn-buy-now {
            background-color: var(--primary);
            color: white;
            border: 2px solid var(--primary);
            border-radius: 10px;
            font-weight: 600;
            padding: 0.6rem 1.25rem;
            transition: all 0.3s ease;
            margin-top: auto; /* Pushes to the bottom */
            width: 100%;
        }

            #recipes .btn-buy-now:hover {
                background-color: var(--primary-dark);
                border-color: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            }

    /* Animation for the badge */
    @@keyframes bounce-in {
        0%

    {
        transform: scale(0.5);
        opacity: 0;
    }

    80% {
        transform: scale(1.1);
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }

    }
</style>


