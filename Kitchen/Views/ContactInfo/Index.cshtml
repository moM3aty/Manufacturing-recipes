@model IEnumerable<Kitchen.Models.ContactInfo>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "إدارة بيانات التواصل";
}

<style>
    .table-container {
        background-color: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    }

    .table thead th {
        background-color: var(--primary-dark, #034c53);
        color: #fff;
        border-bottom: none;
        font-weight: 600;
        text-align: center;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
        transition: all 0.2s ease-in-out;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .table td, .table th {
        vertical-align: middle;
        text-align: right;
        border-top: 1px solid #dee2e6;
    }

    .actions-cell {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

        .page-header h1 {
            color: var(--primary-dark, #034c53);
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
        }
</style>

<div class="page-header">
    <h1><i class="fas fa-address-book"></i> @ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> إضافة جديد</a>
</div>

<div class="table-container">
    <div class="table-responsive">
        <table class="table table-hover" dir="rtl">
            <thead>
                <tr>
                    <th>نوع جهة الاتصال</th>
                    <th>القيمة</th>
                    <th class="text-center">الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @{
                                var typeLabel = item.Type switch
                                {
                                    "Email" => "البريد الإلكتروني",
                                    "Phone" => "الهاتف / واتساب",
                                    "Vodafone" => "فودافون كاش",
                                    _ => item.Type
                                };
                            }
                            @typeLabel
                        </td>
                        <td>@item.Value</td>
                        <td class="actions-cell">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i> تعديل
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('هل أنت متأكد من الحذف؟');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i> حذف
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
