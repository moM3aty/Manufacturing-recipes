@model Kitchen.Models.Recipe

@{
    ViewData["Title"] = "إضافة كود للوصفة";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var title = Model.TitleAr ?? Model.TitleEn;
}

<div class="form-container" style="max-width: 500px;">
    <h2><i class="fas fa-qrcode"></i> @ViewData["Title"]</h2>
    <p class="text-center text-muted mb-4">الوصفة: @title</p>

    <form method="post" action="/Admin/AddCode">
        <input type="hidden" name="RecipeId" value="@Model.Id" />

        <div class="form-group">
            <label for="code" class="form-label">الكود</label>
            <input type="text" name="Code" id="code" class="form-control" placeholder="أدخل الكود هنا" required />
        </div>

        <div class="d-flex flex-column align-items-center gap-2 mt-4">
            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-save"></i> حفظ الكود
            </button>
            <a href="/Admin/Dashboard" class="btn btn-secondary w-100">
                <i class="fas fa-arrow-right"></i> العودة إلى لوحة التحكم
            </a>
        </div>
    </form>
</div>
