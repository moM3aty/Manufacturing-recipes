@model Kitchen.Models.Offer
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<style>

    .form-group {
        margin-bottom: 1.5rem;
        width: 70%;
        margin: 0 auto;
    }

    .form-control {
        direction: rtl;
        font-size: 1rem;
        padding: 10px;
    }

    .btn-block {
        width: 200px;
        padding: 12px;
        margin: 20px auto;
        background-color: lightpink;
        border: none;
        justify-content: center;
        display: flex;
    }

    .col-form-label {
        font-weight: bold;
    }

</style>
@using (Html.BeginForm("Edit", "Offers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.ImageUrl)<!-- نحفظ المسار القديم في حالة لم يتم رفع صورة جديدة -->

    <div class="form-group text-right">
        @Html.LabelFor(m => m.TitleAr, "العنوان (عربي)", new { @class = "col-form-label" })
        @Html.TextBoxFor(m => m.TitleAr, new { @class = "form-control", placeholder = "أدخل العنوان بالعربية" })
    </div>

    <div class="form-group text-right">
        @Html.LabelFor(m => m.TitleEn, "العنوان (إنجليزي)", new { @class = "col-form-label" })
        @Html.TextBoxFor(m => m.TitleEn, new { @class = "form-control", placeholder = "Enter the title in English" })
    </div>

    <div class="form-group text-right">
        @Html.LabelFor(m => m.DescriptionAr, "الوصف (عربي)", new { @class = "col-form-label" })
        @Html.TextAreaFor(m => m.DescriptionAr, new { @class = "form-control", placeholder = "أدخل الوصف بالعربية" })
    </div>

    <div class="form-group text-right">
        @Html.LabelFor(m => m.DescriptionEn, "الوصف (إنجليزي)", new { @class = "col-form-label" })
        @Html.TextAreaFor(m => m.DescriptionEn, new { @class = "form-control", placeholder = "Enter the description in English" })
    </div>

    @if (!string.IsNullOrEmpty(Model?.ImageUrl))
    {
        <div class="form-group text-right">
            <label class="col-form-label">الصورة الحالية</label><br />
            <img src="@Model.ImageUrl" alt="صورة العرض" class="img-thumbnail" style="max-width: 200px;" />
        </div>
    }

    <div class="form-group text-right">
        @Html.Label("تغيير الصورة", null, new { @class = "col-form-label" })
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary btn-block">حفظ التعديلات</button>
}

