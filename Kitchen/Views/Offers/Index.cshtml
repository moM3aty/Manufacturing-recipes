@model List<Kitchen.Models.Offer>

@{
    ViewData["Title"] = "العروض والإعلانات";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Page Header (Consistent with other pages) -->
<div class="page-header">
    <h1><i class="fas fa-tags"></i> @ViewData["Title"]</h1>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus"></i> إضافة عرض جديد
    </a>
</div>

<!-- Offers Grid -->
<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            // Responsive columns: 4 on large, 3 on medium, 2 on small screens
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card recipe-card h-100">
                    <div class="card-img-container">
                        <img src="@item.ImageUrl"
                             class="card-img-top"
                             alt="@item.TitleAr"
                             onerror="this.onerror=null;this.src='https://placehold.co/600x400/034C53/FFFFFF?text=Image+Not+Found';">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.TitleAr</h5>
                        <p class="card-text">@item.DescriptionAr</p>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-outline-primary" title="تعديل">
                            <i class="fas fa-edit"></i>
                        </a>
                     
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-outline-danger btn-sm" onclick="return confirm('هل أنت متأكد من الحذف؟');">
                                <i class="fas fa-trash"></i>
                            </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="text-center p-5 bg-light rounded-3 border">
                <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
                <h4>لا توجد عروض لعرضها حالياً</h4>
                <p>يمكنك إضافة عرض جديد من الزر في الأعلى.</p>
            </div>
        </div>
    }
</div>
