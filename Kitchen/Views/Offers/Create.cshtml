@model Kitchen.Models.Offer

@{
    ViewData["Title"] = "إضافة عرض جديد";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="form-container">
    <h2><i class="fas fa-plus-circle"></i> @ViewData["Title"]</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TitleAr" class="form-label">العنوان (عربي)</label>
                    <input asp-for="TitleAr" class="form-control" required />
                    <span asp-validation-for="TitleAr" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TitleEn" class="form-label">العنوان (إنجليزي)</label>
                    <input asp-for="TitleEn" class="form-control" required />
                    <span asp-validation-for="TitleEn" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DescriptionAr" class="form-label">الوصف (عربي)</label>
            <textarea asp-for="DescriptionAr" class="form-control" rows="4" required></textarea>
            <span asp-validation-for="DescriptionAr" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DescriptionEn" class="form-label">الوصف (إنجليزي)</label>
            <textarea asp-for="DescriptionEn" class="form-control" rows="4" required></textarea>
            <span asp-validation-for="DescriptionEn" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ImageFile" class="form-label">صورة العرض</label>
            <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" required />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> إلغاء</a>
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> حفظ العرض</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
