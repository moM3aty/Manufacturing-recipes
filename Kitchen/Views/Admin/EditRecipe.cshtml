@model Kitchen.Models.Recipe
@{
    ViewData["Title"] = "تعديل وصفة";
}
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<style>
    .recipe-container {
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        margin: 50px auto;
    }

        .recipe-container h2 {
            margin-bottom: 25px;
            text-align: center;
            color: #ff4d94;
        }

        .recipe-container label {
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
            display: block;
        }

        .recipe-container input[type="text"],
        .recipe-container input[type="number"],
        .recipe-container input[type="file"],
        .recipe-container select,
        .recipe-container textarea {
            width: 100%;
            padding: 12px 15px;
            margin: 10px 0 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            background: #fff;
            transition: 0.3s;
        }

            .recipe-container input:focus,
            .recipe-container textarea:focus,
            .recipe-container select:focus {
                border-color: #ff4d94;
                outline: none;
                box-shadow: 0 0 5px rgba(255, 77, 148, 0.5);
            }

        .recipe-container .text-danger {
            font-size: 14px;
            color: #e74c3c;
            margin-top: -15px;
            margin-bottom: 10px;
            display: block;
        }

        .recipe-container img {
            margin-bottom: 10px;
            border-radius: 8px;
            max-width: 100%;
        }

        .recipe-container a {
            display: inline-block;
            margin-bottom: 10px;
            color: #007bff;
        }

            .recipe-container button,
            .recipe-container a.btn-secondary {
                width: 100%;
                padding: 15px;
                border: none;
                border-radius: 8px;
                font-size: 18px;
                margin-top: 10px;
                transition: 0.3s;
            }

        .recipe-container button {
            background: #ff4d94;
            color: white;
        }

            .recipe-container button:hover {
                background: #ff3399;
            }

        .recipe-container a.btn-secondary {
            background: #ccc;
            color: #333;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

            .recipe-container a.btn-secondary:hover {
                background: #bbb;
            }
</style>

<div class="recipe-container">
    <h2>تعديل وصفة</h2>

    <form asp-action="EditRecipe" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <label asp-for="TitleAr">عنوان الوصفة (عربي):</label>
        <input asp-for="TitleAr" />
        <span asp-validation-for="TitleAr" class="text-danger"></span>

        <label asp-for="TitleEn">عنوان الوصفة (إنجليزي):</label>
        <input asp-for="TitleEn" />
        <span asp-validation-for="TitleEn" class="text-danger"></span>

        <label asp-for="DescriptionAr">الوصف (عربي):</label>
        <textarea asp-for="DescriptionAr" rows="3"></textarea>
        <span asp-validation-for="DescriptionAr" class="text-danger"></span>

        <label asp-for="DescriptionEn">الوصف (إنجليزي):</label>
        <textarea asp-for="DescriptionEn" rows="3"></textarea>
        <span asp-validation-for="DescriptionEn" class="text-danger"></span>

        <label asp-for="Price">السعر:</label>
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>

        <label asp-for="SloganAr">الشعار (عربي):</label>
        <input asp-for="SloganAr" />
        <span asp-validation-for="SloganAr" class="text-danger"></span>

        <label asp-for="SloganEn">الشعار (إنجليزي):</label>
        <input asp-for="SloganEn" />
        <span asp-validation-for="SloganEn" class="text-danger"></span>

        <label>الصورة الحالية:</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="~/@Model.ImagePath" alt="Recipe Image" />
        }

        <label>تعديل الصورة:</label>
        <input type="file" name="ImageFile" accept=".jpg,.jpeg,.png" />
        <small class="text-muted">الامتدادات المدعومة: .jpg, .jpeg, .png</small>

        <label>الملف الحالي:</label><br />
        @if (!string.IsNullOrEmpty(Model.FilePath))
        {
            <a href="@Url.Content("~/" + Model.FilePath)" download>تحميل الملف</a>
        }

        <label>تعديل الملف المضغوط:</label>
        <input type="file" name="ZipFile" accept=".zip" />
        <small class="text-muted">الملف يجب أن يكون بصيغة .zip</small>

        <label asp-for="RecipeType">نوع الوصفة:</label>
        <select asp-for="RecipeType" asp-items="ViewBag.RecipeTypes"></select>
        <span asp-validation-for="RecipeType" class="text-danger"></span>

        <button type="submit">حفظ التعديلات</button>
        <a asp-action="Dashboard" class="btn-secondary">إلغاء</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
