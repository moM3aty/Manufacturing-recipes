@{
    var direction = ViewData["Direction"]?.ToString();
}
<link rel="stylesheet"
         href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
<style>
        :root {
                --primary-dark: #034c53;
                --primary: #007074;
                --accent: #f38c79;
                --accent-light: #ffc1b4;

    }


        .bg-gradient-primary {
                background: linear-gradient( 135deg, var(--primary-dark) 0%, var(--primary) 100% ) !important;

    }

        .btn-accent {
                background-color: var(--accent);
                color: white;
                border: none;

    }

            .btn-accent:hover {
                    background-color: var(--primary);
                    color: white;

    }

        .card {
                border: none;
                border-radius: 10px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                transition: all 0.3s ease-in-out;
                overflow: hidden;

    }

            .card:hover {
                    transform: translateY(-10px);
                    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);

    }

            .card img {
                    transition: transform 0.5s ease;

    }

            .card:hover img {
                    transform: scale(1.05);

    }

        .card-header {
                background: linear-gradient( 135deg, var(--primary) 0%, var(--primary-dark) 100% );
                color: white;
                border-radius: 10px 10px 0 0 !important;
                display: flex;
                justify-content: space-between;
                align-items: center;

    }

        .category-badge {
                background-color: var(--accent-light);
                color: var(--primary-dark);
                font-weight: 600;
        animation: pulse 2s infinite;

    }

    @@keyframes pulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
    }

    }

        footer {
                background: linear-gradient( 135deg, var(--primary-dark) 0%, var(--primary) 100% );
                color: white;

    }

        .input-group > :not(:first-child):not(.dropdown-menu):not(.valid-tooltip):not( .valid-feedback ):not(.invalid-tooltip):not(.invalid-feedback) {
                border-top-right-radius: 0;
                border-bottom-right-radius: 0;
                border-top-left-radius: 0.375rem;
                border-bottom-left-radius: 0.375rem;

    }

        .input-group > .form-control:not(:first-child) {
                border-top-left-radius: 0;
                border-bottom-left-radius: 0;
                border-top-right-radius: 0.375rem;
                border-bottom-right-radius: 0.375rem;

    }

        .study-code {
                background-color: rgba(255, 255, 255, 0.2);
                padding: 3px 8px;
                border-radius: 4px;
                font-family: monospace;
                font-size: 0.9rem;

    }

        .card-footer-buttons {
                display: flex;
                justify-content: space-between;
                align-items: center;
                gap: 10px;

    }

        .more-studies {
                display: none;

    }

        .service-icon {
                background-color: rgba(255, 193, 180, 0.2);
                border-radius: 50%;
                width: 80px;
                height: 80px;
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 0 auto 15px;
        transition: transform 0.5s ease, background-color 0.3s ease;

    }

    .service-icon:hover {
        transform: rotate(360deg);
        background-color: rgba(255, 193, 180, 0.4);
    }

        .hero-img {
                width: 100%;
                height: auto;
                max-height: 400px;
                object-fit: cover;
                border-radius: 10px;
                margin-top: 10px;
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease;

    }

        .logo-subtitle {
                font-weight: 500;
                letter-spacing: -0.5px;
                margin-top: -5px;

    }

        .btn {
                transition: all 0.3s ease;
                margin: 5px 0;

    }

            .btn:hover {
                    transform: translateY(-2px);
                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);

    }

        .hero-buttons {
                margin-top: 20px;

    }

            .hero-buttons .btn {
                    transition: all 0.3s ease;
                    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);

    }

                .hero-buttons .btn:hover {
                        transform: translateY(-3px);
                        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);

    }

        .fade-in-up {
                animation: fadeInUp 0.6s ease-out;

    }
</style>
<section class="hero-section">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-12 col-lg-6 order-2 order-lg-1 @(direction == "rtl" ? "text-lg-right" : "text-lg-left")">
                <h1 class="display-4 fw-bold mb-4" style="color: var(--primary-dark);" data-aos="fade-up" data-aos-delay="100">
                    @if (direction == "rtl")
                    {
                        @:دراسات جدوى احترافية<br />
                        <span class="h3" style="color: var(--accent);">لضمان نجاح مشروعك</span>
                    }
                    else
                    {
                        @:Professional Feasibility Studies<br />
                        <span class="h3" style="color: var(--accent);">Ensuring Your Project's Success</span>
                    }
                </h1>
                <p class="lead mb-4" data-aos="fade-up" data-aos-delay="200">
                    @(direction == "rtl"
                                        ? "نقدم تحليلات شاملة ومتعمقة للسوق، والجوانب المالية، والفنية، والقانونية لمساعدتك على اتخاذ قرارات استثمارية مدروسة."
                                        : "We provide comprehensive and in-depth analysis of the market, financial, technical, and legal aspects to help you make informed investment decisions.")
                </p>
                <div class="hero-buttons d-flex flex-column flex-sm-row gap-3 justify-content-center justify-content-lg-start" data-aos="fade-up" data-aos-delay="300">
                    <a href="#studies" class="btn btn-accent btn-lg rounded-pill px-4">
                        @(direction == "rtl" ? "اطلب دراستك الآن" : "Request Your Study")
                    </a>
                    <a href="#" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                        @(direction == "rtl" ? "المزيد من المعلومات" : "More Information")
                    </a>
                </div>
            </div>
            <div class="col-12 col-lg-6 order-1 order-lg-2 mb-4 mb-lg-0">
                <img src="~/assets/FeasibilityStudies.jpeg" class="hero-img" alt="دراسة جدوى" loading="eager" data-aos="fade-left" data-aos-delay="400" />
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold" style="color: var(--primary-dark);">@(direction == "rtl" ? "تغطي خدماتنا مختلف القطاعات" : "Our Services Cover Various Sectors")</h2>
            <p class="text-muted">@(direction == "rtl" ? "نقدم دراسات جدوى متخصصة لتناسب احتياجات مشروعك الفريدة." : "We offer specialized feasibility studies to fit your unique project needs.")</p>
        </div>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 filter-category" data-category="industrial">
                    <div class="card-body text-center p-4">
                        <div class="service-icon">
                            <i class='bx bxs-factory' style="font-size: 40px; color: var(--primary-dark);"></i>
                        </div>
                        <h4 class="card-title">
                            @(direction == "rtl" ? "دراسات جدوى صناعية" : "Industrial Feasibility Studies")
                        </h4>
                        <p class="card-text">
                            @(direction == "rtl" ? "تحليل شامل للمشاريع الصناعية والإنتاجية." : "Comprehensive analysis for industrial and manufacturing projects.")
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 filter-category" data-category="service">
                    <div class="card-body text-center p-4">
                        <div class="service-icon">
                            <i class='bx bx-briefcase-alt-2' style="font-size: 40px; color: var(--primary-dark);"></i>
                        </div>
                        <h4 class="card-title">
                            @(direction == "rtl" ? "دراسات جدوى خدمية" : "Service Feasibility Studies")
                        </h4>
                        <p class="card-text">
                            @(direction == "rtl" ? "تقييم المشاريع في قطاعات الخدمات، التعليم، والصحة." : "Evaluation for projects in service, education, and health sectors.")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="studies" class="py-5" dir="@ViewData["Direction"]">
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2 style="color: var(--primary)">
                @(direction == "rtl" ? "نماذج من دراسات الجدوى" : "Feasibility Study Samples")
            </h2>
        </div>

        <div class="row g-4">
            @foreach (var study in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <span class="badge category-badge float-start">
                                @(direction == "rtl" ? study.SloganAr : study.SloganEn)
                            </span>
                            <h5 class="mb-0">
                                @(direction == "rtl" ? study.TitleAr : study.TitleEn)
                            </h5>
                        </div>
                        <img src="~/@study.ImagePath" alt="@study.TitleAr" class="card-img-top" />
                        <div class="card-body">
                            <p>
                                @(direction == "rtl" ? study.DescriptionAr : study.DescriptionEn)
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0 flex-column">
                            <div class="card-footer-buttons">
                                <div class="d-flex justify-content-between flex-row" style="width: 100%">
                                    <span class="fw-bold text-accent" style="color: var(--accent)">
                                       @study.Price.ToString("C")
                                    </span>
                                </div>
                                <a class="btn btn-sm btn-accent" style="width: 100%" href="/Recipe/EnterCode/@study.Id">
                                    @(direction == "rtl" ? "تحميل" : "Download")
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="py-5 bg-white text-white" dir="@ViewData["Direction"]">
    <div class="container py-4 text-center">
        <h2 class="display-5 fw-bold mb-4" style="color: var(--primary-dark)">
            @(direction == "rtl" ? "هل أنت مستعد لاتخاذ الخطوة الأولى نحو النجاح؟" : "Ready to Take the First Step Towards Success?")
        </h2>
        <p class="lead mb-5" style="color: var(--primary-dark);">
            @(direction == "rtl" ? "انضم إلى رواد الأعمال الناجحين الذين يعتمدون على دراساتنا الدقيقة لاتخاذ قراراتهم الاستثمارية." : "Join successful entrepreneurs who rely on our accurate studies to make their investment decisions.")
        </p>
        <div class="d-flex justify-content-center gap-3">
            <a href="#"
                       class="btn btn-light btn-lg rounded-pill px-4"
                       style="color: var(--primary-dark); border: 1px solid var(--primary-dark); background-color: transparent;">
                @(direction == "rtl" ? "ابدأ الآن" : "Get Started")
            </a>
            <a asp-action="contact"
                       class="btn btn-outline-light btn-lg rounded-pill px-4"
                       style="background-color: var(--primary-dark); color: white;">
                @(direction == "rtl" ? "اتصل بنا" : "Contact Us")
            </a>
        </div>
    </div>
</section>