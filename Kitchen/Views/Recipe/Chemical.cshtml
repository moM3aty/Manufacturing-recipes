<section id="recipes" class="py-5" dir="@ViewData["Direction"]">
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2 style="color: var(--primary)">
                @if (ViewData["Direction"].ToString() == "rtl")
                {
                    @:وصفات كيميائيه مميزة
                }
                else
                {
                    @:Special chemical recipes
                }
            </h2>
        </div>

        <div class="row g-4">
            @foreach (var recipe in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <span class="badge category-badge float-start">
                                @if (ViewData["Direction"].ToString() == "rtl")
                                {
                                    @recipe.SloganAr
                                }
                                else
                                {
                                    @recipe.SloganEn
                                }
                            </span>
                            <h5 class="mb-0">
                                @if (ViewData["Direction"].ToString() == "rtl")
                                {
                                    @recipe.TitleAr
                                }
                                else
                                {
                                    @recipe.TitleEn
                                }
                            </h5>
                        </div>
                        <img src="~/@recipe.ImagePath" alt="@recipe.TitleAr" class="card-img-top" />
                        <div class="card-body">
                            @if (ViewData["Direction"].ToString() == "rtl")
                            {
                                @recipe.DescriptionAr
                            }
                            else
                            {
                                @recipe.DescriptionEn
                            }
                        </div>
                        <div class="card-footer bg-transparent border-0 flex-column">
                            <div class="card-footer-buttons">
                                <div class="d-flex justify-content-between flex-row" style="width: 100%">
                                    <span class="fw-bold text-accent" style="color: var(--accent)">
                                        @recipe.Price.ToString("F2") $
                                    </span>
                                    <span class="recipe-code">AGR-001</span>
                                </div>
                                <a style="width: 100%" class="btn btn-sm btn-accent" href="/Recipe/EnterCode/@recipe.Id">
                                    @if (ViewData["Direction"].ToString() == "rtl")
                                    {
                                        @:تحميل
                                    }
                                    else
                                    {
                                        @:Download
                                    }
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>



