@model int
@{
    var direction = ViewData["Direction"]?.ToString() ?? "rtl";
    var language = ViewData["Language"]?.ToString() ?? "ar";
}

<style>
    

    .verify-container {
        background: #fff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 450px;
        text-align: center;
        margin:50px auto;
        
    }

        .verify-container h2 {
            color: #034c53;
            margin-bottom: 25px;
        }

        .verify-container input[type="text"] {
            width: 100%;
            padding: 15px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 10px;
            margin-bottom: 20px;
            transition: 0.3s ease;
        }

        .verify-container input:focus {
            border-color: #034c53;
            box-shadow: 0 0 5px rgba(231, 84, 128, 0.5);
            outline: none;
        }

        .verify-container button {
            width: 100%;
            padding: 15px;
            background: #034c53;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            .verify-container button:hover {
                background: #f38c79;
            }

        .verify-container a {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 20px;
            background-color: green;
            color: white;
            text-decoration: none;
            border-radius: 10px;
            font-weight: bold;
            transition: background 0.3s ease;
        }

            .verify-container a:hover {
                background-color: forestgreen;
            }
</style>

<div class="verify-container">
    <h2>أدخل كود الوصفة</h2>
    <form method="post" action="/Recipe/VerifyCode">
        <input type="hidden" name="id" value="@Model" />
        <input type="text" name="code" placeholder="أدخل الكود هنا" required />
        <button type="submit">تحقق</button>
    </form>
    <a href="https://wa.me/+201001088937?text=Hello%20I%20need%20the%20code%20for%20recipe%20@Model" target="_blank">
        تواصل عبر واتساب
    </a>
</div>
