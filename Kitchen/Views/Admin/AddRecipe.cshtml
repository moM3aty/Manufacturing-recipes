@{
    ViewData["Title"] = "إضافة وصفة";
}
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<style>
    .recipe-container {
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
        margin: 50px auto;
    }

        .recipe-container h2 {
            margin-bottom: 25px;
            text-align: center;
            color: #ff4d94;
        }

        .recipe-container input[type="text"],
        .recipe-container textarea,
        .recipe-container input[type="file"],
        .recipe-container select {
            width: 100%;
            padding: 12px 15px;
            margin: 10px 0 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            transition: 0.3s ease;
            font-size: 16px;
            background: #fff;
        }

            .recipe-container input:focus,
            .recipe-container textarea:focus,
            .recipe-container select:focus {
                border-color: #ff4d94;
                outline: none;
                box-shadow: 0 0 5px rgba(255, 77, 148, 0.5);
            }

        .recipe-container label {
            font-weight: bold;
            color: #333;
            display: block;
            margin-bottom: 5px;
        }

        .recipe-container button {
            width: 100%;
            padding: 15px;
            background: #ff4d94;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            .recipe-container button:hover {
                background: #ff3399;
            }
</style>

<div class="recipe-container">
    <h2>إضافة وصفة</h2>
    <form asp-action="AddRecipe" method="post" enctype="multipart/form-data">
        <label>عنوان الوصفة (عربي):</label>
        <input type="text" name="TitleAr" required />

        <label>عنوان الوصفة (إنجليزي):</label>
        <input type="text" name="TitleEn" required />

        <label>الوصف (عربي):</label>
        <textarea name="DescriptionAr" rows="3" required></textarea>

        <label>الوصف (إنجليزي):</label>
        <textarea name="DescriptionEn" rows="3" required></textarea>

        <label>السعر:</label>
        <input type="number" name="Price" step="0.01" required />

        <label>الشعار (عربي):</label>
        <input type="text" name="SloganAr" required />

        <label>الشعار (انجليزي):</label>
        <input type="text" name="SloganEn" required />

        <label>نوع الوصفة:</label>
        <select name="RecipeType" required>
            <option value="Agricultural">زراعي</option>
            <option value="Chemical">كيميائي</option>
            <option value="Nutritional">غذائي</option>
            <option value="Pharmacy">صيدلي</option>
            <option value="cosmetics">مستحضرات تجميل</option>
            <option value="Feasibility Studies">دراسات جدوى</option>
            <option value="Industrial Models">نماذج صناعية</option>
        </select>

        <label>ملف الوصفة (ZIP):</label>
        <input type="file" name="RecipeFile" accept=".zip" required />

        <label>صورة الوصفة:</label>
        <input type="file" name="ImageFile" accept="image/*" required />

        <button type="submit">رفع الوصفة</button>
    </form>
</div>
