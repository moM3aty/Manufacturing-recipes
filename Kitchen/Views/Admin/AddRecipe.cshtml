@model Kitchen.Models.Recipe

@{
    ViewData["Title"] = "إضافة وصفة جديدة";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="form-container">
    <h2><i class="fas fa-plus-circle"></i> @ViewData["Title"]</h2>
    <form asp-action="AddRecipe" method="post" enctype="multipart/form-data">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">عنوان الوصفة (عربي)</label>
                    <input type="text" name="TitleAr" class="form-control" required />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">عنوان الوصفة (إنجليزي)</label>
                    <input type="text" name="TitleEn" class="form-control" required />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">الوصف (عربي)</label>
            <textarea name="DescriptionAr" rows="4" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label class="form-label">الوصف (إنجليزي)</label>
            <textarea name="DescriptionEn" rows="4" class="form-control" required></textarea>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">الشعار (عربي)</label>
                    <input type="text" name="SloganAr" class="form-control" required />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">الشعار (إنجليزي)</label>
                    <input type="text" name="SloganEn" class="form-control" required />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">السعر</label>
                    <input type="number" name="Price" step="0.01" class="form-control" required />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">نوع الوصفة</label>
                    <select name="RecipeType" class="form-select" required>
                        <option value="" disabled selected>-- اختر النوع --</option>
                        <option value="Agricultural">زراعي</option>
                        <option value="Chemical">كيميائي</option>
                        <option value="Nutritional">غذائي</option>
                        <option value="Pharmacy">صيدلي</option>
                        <option value="Cosmetics">مستحضرات تجميل</option>
                        <option value="Feasibility Studies">دراسات جدوى</option>
                        <option value="Industrial Models">نماذج صناعية</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">صورة الوصفة</label>
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" required />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">ملف الوصفة (ZIP)</label>
                    <input type="file" name="RecipeFile" class="form-control" accept=".zip" required />
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Dashboard" class="btn btn-secondary"><i class="fas fa-times"></i> إلغاء</a>
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> حفظ الوصفة</button>
        </div>
    </form>
</div>
