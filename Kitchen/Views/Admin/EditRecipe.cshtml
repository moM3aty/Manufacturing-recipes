@model Kitchen.Models.Recipe
@{
    ViewData["Title"] = "تعديل وصفة";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="form-container">
    <h2><i class="fas fa-edit"></i> @ViewData["Title"]</h2>
    <form asp-action="EditRecipe" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImagePath" />
        <input type="hidden" asp-for="FilePath" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TitleAr" class="form-label"></label>
                    <input asp-for="TitleAr" class="form-control" />
                    <span asp-validation-for="TitleAr" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TitleEn" class="form-label"></label>
                    <input asp-for="TitleEn" class="form-control" />
                    <span asp-validation-for="TitleEn" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DescriptionAr" class="form-label"></label>
            <textarea asp-for="DescriptionAr" class="form-control" rows="4"></textarea>
            <span asp-validation-for="DescriptionAr" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DescriptionEn" class="form-label"></label>
            <textarea asp-for="DescriptionEn" class="form-control" rows="4"></textarea>
            <span asp-validation-for="DescriptionEn" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SloganAr" class="form-label"></label>
                    <input asp-for="SloganAr" class="form-control" />
                    <span asp-validation-for="SloganAr" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SloganEn" class="form-label"></label>
                    <input asp-for="SloganEn" class="form-control" />
                    <span asp-validation-for="SloganEn" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RecipeType" class="form-label"></label>
                    <select asp-for="RecipeType" class="form-select" asp-items="ViewBag.RecipeTypes"></select>
                    <span asp-validation-for="RecipeType" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">تغيير الصورة (اختياري)</label>
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="~/@Model.ImagePath" alt="Current Image" style="max-width: 100px; margin-top: 10px; border-radius: 8px;" />
                    }
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">تغيير الملف (ZIP - اختياري)</label>
                    <input type="file" name="ZipFile" class="form-control" accept=".zip" />
                    @if (!string.IsNullOrEmpty(Model.FilePath))
                    {
                        <a href="@Url.Content("~/" + Model.FilePath)" download class="d-block mt-2">تحميل الملف الحالي</a>
                    }
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Dashboard" class="btn btn-secondary"><i class="fas fa-times"></i> إلغاء</a>
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> حفظ التعديلات</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
