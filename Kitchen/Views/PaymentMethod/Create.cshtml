@model Kitchen.Models.PaymentMethod
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
       ViewData["Title"] = "إضافة طريقة دفع جديدة";
}

<div class="form-container">
    <h2>

            <i class="fas fa-plus-circle"></i>
       
        @ViewData["Title"]
    </h2>

    <form asp-action="Create"  method="post">
        @Html.AntiForgeryToken()

      

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TypeAr" class="form-label">نوع الطريقة (عربي)</label>
                    <input asp-for="TypeAr" class="form-control" />
                    <span asp-validation-for="TypeAr" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TypeEn" class="form-label">نوع الطريقة (انجليزي)</label>
                    <input asp-for="TypeEn" class="form-control" />
                    <span asp-validation-for="TypeEn" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="AccountNumber" class="form-label">رقم الحساب</label>
            <input asp-for="AccountNumber" class="form-control" placeholder="اختياري" />
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IBAN" class="form-label">رقم IBAN</label>
            <input asp-for="IBAN" class="form-control" placeholder="اختياري" />
            <span asp-validation-for="IBAN" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="InstapayEmail" class="form-label">بريد إنستاباي</label>
            <input asp-for="InstapayEmail" class="form-control" placeholder="اختياري" />
            <span asp-validation-for="InstapayEmail" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> إلغاء
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> حفظ
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
