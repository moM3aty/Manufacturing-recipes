@model Kitchen.Models.Offer

@{
    ViewData["Title"] = "تعديل العرض";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="form-container">
    <h2><i class="fas fa-edit"></i> @ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageUrl" /> <!-- To preserve the old image path if no new image is uploaded -->

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TitleAr" class="form-label">العنوان (عربي)</label>
                    <input asp-for="TitleAr" class="form-control" />
                    <span asp-validation-for="TitleAr" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TitleEn" class="form-label">العنوان (إنجليزي)</label>
                    <input asp-for="TitleEn" class="form-control" />
                    <span asp-validation-for="TitleEn" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DescriptionAr" class="form-label">الوصف (عربي)</label>
            <textarea asp-for="DescriptionAr" class="form-control" rows="4"></textarea>
            <span asp-validation-for="DescriptionAr" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DescriptionEn" class="form-label">الوصف (إنجليزي)</label>
            <textarea asp-for="DescriptionEn" class="form-control" rows="4"></textarea>
            <span asp-validation-for="DescriptionEn" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">تغيير الصورة (اختياري)</label>
            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
            @if (!string.IsNullOrEmpty(Model?.ImageUrl))
            {
                <div class="mt-2">
                    <label class="form-label d-block">الصورة الحالية:</label>
                    <img src="@Model.ImageUrl" alt="صورة العرض الحالية" class="img-thumbnail" style="max-width: 200px; border-radius: 8px;" />
                </div>
            }
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> إلغاء</a>
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> حفظ التعديلات</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
